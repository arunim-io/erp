{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "moduleDetection": "force",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true
  },
  "include": [
    "static/src/**/*.ts",
    "static/src/**/*.js",
    "static/src/**/*.svelte"
  ]
}
