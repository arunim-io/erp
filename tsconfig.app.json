{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "moduleDetection": "force",
    "useDefineForClassFields": true,
    "baseUrl": "./static/src/",
    "module": "ESNext",
    "paths": {
      "$lib": [
        "lib"
      ],
      "$lib/*": [
        "lib/*"
      ]
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true
  },
  "include": [
    "static/src/**/*.ts",
    "static/src/**/*.js",
    "static/src/**/*.svelte"
  ]
}